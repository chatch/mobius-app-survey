{
  "name": "survey-api",
  "version": "0.1.0",
  "description": "Survey backend",
  "main": "dist/handler.js",
  "scripts": {
    "build": "npm run build-ts",
    "deploy": "npm run build && sls deploy",
    "test": "jest src/",
    "test-watch": "jest src/ --watch",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "offline-start": "npm run build && sls offline start -s local --noAuth",
    "offline-setup": "sls dynamodb install"
  },
  "dependencies": {
    "aws-sdk": "^2.257.1",
    "express": "^4.16.3",
    "serverless-http": "^1.5.5"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.4",
    "@types/node-fetch": "^2.1.1",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "node-fetch": "^2.1.2",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-offline": "^3.25.4",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  }
}
